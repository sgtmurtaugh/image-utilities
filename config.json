{
  "project": {
    "name": "image-utils",
    "version": "0.1.0"
  },

  "paths": {
    "src": "src",
    "build": "build",
    "assets": "assets",
    "media": "media",
    "image": "image",
    "svg": "svg",
    "sprite": "sprite",
    "stylesheet": "stylesheet",
    "resizeimg": "resizeimg",
    "nsg": "nsg",
    "svgsprite": "svg-sprite"
  },

  "sprite": {
  },

  "nsg": {
    "prefix": "nsg-",
    "suffix": "-nsg",
    "layout": "packed",
    "layout_": "diagonal",
    "layout_": "horizontal",
    "layout_": "vertical",
    "spriteExtension": ".png",
    "stylesheet": "scss",
    "stylesheetExtension": ".scss",
    "compositor": "jimp",
    "pixelRation": 1
  },


  "resizeimg": {
    "prefix": "scaled-",
    "suffix": "-scaled",
    "createFolders": true,
    "sizes": {
      "standard": {
        "width": 640,
        "height": 480
      }
    }
  },

  "svgsprite": {
    "_src": "src/media/svg/sprites/**/*.svg",
    "_target": "build",
    "prefix": "prefix-",
    "suffix": "-suffix",
    "layout": "horizontal",
    "layout_": "vertical",
    "layout_": "diagonal",
    "dimensions": "-dims",





    "config": {
      "log": "debug",

      "shape": {
        "id": {
          "separator": "--",
          "generator": "%s",
          "pseudo": "~",
          "whitespace": "_"
        },
        "dimension": {
          "maxWidth": 2000,
          "maxHeight": 2000,
          "precision": 2,
          "attributes": false
        },
        "spacing": {
          "padding": 1,
          "box": "content"
        },
        "transform": ["svgo"],
        "meta": null,
        "align": null
      },

      "svg": {
        "xmlDeclaration": true,
        "doctypeDeclaration": true,
        "namespaceIDs": true,
        "namespaceClassnames": true,
        "dimensionAttributes": true,
        "rootAttributes": "",
        "precision": -1,
        "transform": []
      },

      "mode": {
        "view": {
          "dest": "./assets/scss",
          "sprite": "../../assets/img/svg-sprites/svg-sprite.view.svg",
          "dimensions": "-dims",
          "layout": "horizontal",
          "layout_": "vertical",
          "layout_": "diagonal",
          "common": "",
          "mixin": "sprite",
          "bust": false,
          "render": {
            "scss": {
              "dest": "svg-sprites/_svg-sprite.view.scss"
            }
          },
          "example": false
        }
      },

      "variables": {
        "mapname": "icons"
      }
    }
  }

}
